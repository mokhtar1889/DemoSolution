@using Demo.PL.ViewModels.IdentityViewModels


@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



@model LoginViewModel

<div class="main-w3layouts wrapper">
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-action="Login" method="post">
				<div asp-validation-summary="ModelOnly"></div>



				<input asp-for="Email" placeholder="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
				<br />

				<input asp-for="Password" placeholder="Password">
				<span asp-validation-for="Password" class="text-danger"></span>
				<br />


				<div class="wthree-text">
					<label class="anim">
						<input type="checkbox" asp-for="RememberMe" class="checkbox">
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="LOGIN">
			</form>
			<p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
			<p><a asp-action="ForgetPassword"> Forget Password</a></p>
		</div>
	</div>

</div>